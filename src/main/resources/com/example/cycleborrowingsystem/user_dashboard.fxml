<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.cycleborrowingsystem.controllers.UserDashboardController" prefWidth="960" prefHeight="640">
    <top>
        <ToolBar>
            <Label text="User Dashboard" style="-fx-font-size:18px; -fx-font-weight:700;" />
            <Separator orientation="VERTICAL" />
            <Label text="Location:" />
            <Label fx:id="locationLabel" text="â€”" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button text="Back" onAction="#onBack" />
        </ToolBar>
    </top>
    <center>
        <BorderPane>
            <center>
                <TableView fx:id="cyclesTable">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="80" />
                        <TableColumn fx:id="modelColumn" text="Model" prefWidth="260" />
                        <TableColumn fx:id="latColumn" text="Lat" prefWidth="160" />
                        <TableColumn fx:id="lonColumn" text="Lon" prefWidth="160" />
                    </columns>
                </TableView>
            </center>
            <bottom>
                <VBox spacing="8" padding="10">
                    <HBox spacing="8">
                        <TextField fx:id="modelField" promptText="Model" />
                        <TextField fx:id="latField" promptText="Latitude" />
                        <TextField fx:id="lonField" promptText="Longitude" />
                        <Button text="Add / Update" onAction="#onAddOrUpdate" />
                        <Button text="Remove Selected" onAction="#onRemoveSelected" />
                        <Pane HBox.hgrow="ALWAYS" />
                        <Button text="Refresh" onAction="#onRefresh" />
                    </HBox>
                    <Label text="Tip: Use the mobile link to keep your location updating automatically." style="-fx-text-fill: #475569;"/>
                </VBox>
            </bottom>
        </BorderPane>
    </center>
</BorderPane>


